<div class="container">
  <div class="evidence-page">
    <div class="header">
      <div class="back-link">
        <%= link_to "← Back to Tax Return", tax_return_path(@evidence.tax_return) %>
      </div>
      <h1>Evidence: <%= @evidence.filename %></h1>
      <p class="subtitle">Review and extract data from <%= @evidence.tax_return.tax_year.label %></p>
    </div>

    <div class="content">
      <div class="evidence-section">
        <div class="file-info">
          <div class="info-row">
            <label>Filename:</label>
            <span><%= @evidence.filename %></span>
          </div>
          <div class="info-row">
            <label>Upload Date:</label>
            <span><%= @evidence.created_at.strftime("%d %b %Y at %H:%M") %></span>
          </div>
          <% if @evidence.file.attached? %>
            <div class="info-row">
              <label>File Size:</label>
              <span><%= number_to_human_size(@evidence.file.byte_size) %></span>
            </div>
          <% end %>
        </div>

        <% if @evidence.file.attached? %>
          <div class="file-download">
            <%= link_to "Download File", rails_blob_path(@evidence.file, disposition: "attachment"), class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>

      <hr class="section-divider">

      <div class="extraction-section">
        <h2>Data Extraction</h2>
        <p class="section-description">Extract tax values from this document using AI.</p>

        <% if @evidence.extraction_runs.any? %>
          <% latest_run = @evidence.extraction_runs.order(created_at: :desc).first %>

          <div class="extraction-status status-<%= latest_run.status %>">
            <div class="status-header">
              <span class="status-badge <%= latest_run.status %>"><%= latest_run.status.upcase %></span>
              <% if latest_run.model.present? %>
                <span class="model-info">Model: <%= latest_run.model %></span>
              <% end %>
              <span class="extraction-date"><%= latest_run.created_at.strftime("%d %b %Y at %H:%M") %></span>
            </div>

            <% if latest_run.error_message.present? %>
              <div class="error-message">
                <strong>Error:</strong> <%= latest_run.error_message %>
              </div>
            <% end %>

            <% if latest_run.candidates.present? %>
              <div class="candidates-section">
                <h3>Extracted Values</h3>
                <p class="candidates-description">Review and accept the extracted tax values below:</p>

                <div class="candidates-list">
                  <% latest_run.candidates.each_with_index do |candidate, index| %>
                    <div class="candidate-item">
                      <div class="candidate-header">
                        <div class="candidate-location">
                          <span class="form-badge"><%= candidate["form"] %></span>
                          <span class="location">Page <%= candidate["page"] %>, Box <%= candidate["box"] %></span>
                        </div>
                        <% if candidate["instance"].present? %>
                          <span class="instance">Instance <%= candidate["instance"] %></span>
                        <% end %>
                      </div>

                      <div class="candidate-details">
                        <div class="detail-row">
                          <label>Extracted Value:</label>
                          <span class="value"><strong><%= candidate["value_raw"] %></strong></span>
                        </div>
                        <% if candidate["confidence"].present? %>
                          <div class="detail-row">
                            <label>Confidence:</label>
                            <span class="confidence <%= confidence_class(candidate["confidence"]) %>">
                              <%= (candidate["confidence"] * 100).to_i %>%
                            </span>
                          </div>
                        <% end %>
                        <% if candidate["note"].present? %>
                          <div class="detail-row">
                            <label>Note:</label>
                            <span class="note"><%= candidate["note"] %></span>
                          </div>
                        <% end %>
                      </div>

                      <div class="candidate-action">
                        <% if candidate["box_definition_id"] %>
                          <%= button_to "Accept Value", accept_candidate_extraction_run_path(latest_run, candidate_index: index), method: :post, class: "btn btn-success" %>
                        <% else %>
                          <span class="no-match">⚠ No matching box definition</span>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            <% else %>
              <div class="no-candidates">
                <p>No values extracted yet. Click "Run Extraction" to analyze this document.</p>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="empty-extraction">
            <p>No extraction has been run on this document yet.</p>
            <p>Click "Run Extraction" to analyze this document and extract tax values using AI.</p>
          </div>
        <% end %>

        <div class="extraction-actions">
          <%= button_to "Run Extraction", evidence_extraction_runs_path(@evidence), method: :post, class: "btn btn-primary btn-lg" %>
        </div>
      </div>

      <hr class="section-divider">

      <div class="next-steps-section">
        <h2>Next Steps</h2>
        <div class="steps-container">
          <div class="step">
            <div class="step-number">1</div>
            <div class="step-content">
              <h3>Extract Values</h3>
              <p>Run extraction above to identify tax values in this document.</p>
            </div>
          </div>

          <div class="step">
            <div class="step-number">2</div>
            <div class="step-content">
              <h3>Accept Values</h3>
              <p>Review and accept extracted values to add them to your tax return.</p>
            </div>
          </div>

          <div class="step">
            <div class="step-number">3</div>
            <div class="step-content">
              <h3>Upload More Evidence</h3>
              <p>Upload additional documents to extract more values.</p>
            </div>
          </div>

          <div class="step">
            <div class="step-number">4</div>
            <div class="step-content">
              <h3>Run Validations</h3>
              <p>Verify your tax return data for completeness and accuracy.</p>
            </div>
          </div>
        </div>

        <div class="action-buttons">
          <%= link_to "Upload More Evidence", new_evidence_path(tax_return_id: @evidence.tax_return_id), class: "btn btn-secondary" %>
          <%= link_to "Go to Tax Return", tax_return_path(@evidence.tax_return), class: "btn btn-secondary" %>
          <%= link_to "Run Validations", "/tax_returns/#{@evidence.tax_return.id}/validations", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>

