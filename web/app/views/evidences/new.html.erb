<div class="container">
  <div class="upload-evidence-page">
    <div class="header">
      <div class="back-link">
        <%= link_to "â† Back to Tax Return", tax_return_path(@tax_return) %>
      </div>
      <h1>Upload Evidence</h1>
      <p class="subtitle">Organize your tax documents for <%= @tax_return.tax_year.label %></p>
    </div>

    <div class="content">
      <% if @evidence.errors.any? %>
        <div class="error-banner">
          <h2><%= pluralize(@evidence.errors.count, "error") %> prevented this upload:</h2>
          <ul>
            <% @evidence.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="workflow-container">
        <div class="workflow-step active">
          <div class="step-number">1</div>
          <div class="step-content">
            <h2>Blank Tax Forms</h2>
            <p class="step-description">Upload the blank tax forms that need to be filled in</p>
            <div class="form-group">
              <%= form_with model: @evidence, local: true, class: "evidence-form" do |form| %>
                <%= form.hidden_field :tax_return_id, value: @tax_return.id %>
                <%= form.hidden_field :evidence_type, value: "blank_form" %>

                <div class="upload-box">
                  <div class="upload-icon">ðŸ“„</div>
                  <label for="blank_forms_file">Choose files or drag and drop</label>
                  <%= form.file_field :file, id: "blank_forms_file", multiple: true, accept: ".pdf", required: true, class: "file-input" %>
                  <p class="file-help">Accepted formats: PDF</p>
                </div>

                <div class="examples">
                  <p><strong>Examples of blank forms to upload:</strong></p>
                  <ul>
                    <li>SA100 (Self Assessment Return)</li>
                    <li>SA102 (Self Employment)</li>
                    <li>SA103 (UK Property)</li>
                    <li>SA104 (Foreign Income)</li>
                    <li>SA105 (UK Interest)</li>
                  </ul>
                </div>

                <div class="form-actions">
                  <%= form.submit "Upload Blank Forms", class: "btn btn-primary" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <div class="workflow-step">
          <div class="step-number">2</div>
          <div class="step-content">
            <h2>Supporting Documents</h2>
            <p class="step-description">Upload evidence documents that support your tax return</p>
            <div class="form-group">
              <%= form_with model: @evidence, local: true, class: "evidence-form" do |form| %>
                <%= form.hidden_field :tax_return_id, value: @tax_return.id %>
                <%= form.hidden_field :evidence_type, value: "supporting_document" %>

                <div class="upload-box">
                  <div class="upload-icon">ðŸ“Ž</div>
                  <label for="supporting_docs_file">Choose files or drag and drop</label>
                  <%= form.file_field :file, id: "supporting_docs_file", multiple: true, accept: ".pdf", required: true, class: "file-input" %>
                  <p class="file-help">Accepted formats: PDF</p>
                </div>

                <div class="examples">
                  <p><strong>Examples of supporting documents:</strong></p>
                  <ul>
                    <li>Payslips (P60, P45)</li>
                    <li>Investment statements</li>
                    <li>Bank interest statements</li>
                    <li>Charitable donation receipts</li>
                    <li>Rental income records</li>
                    <li>Pension statements</li>
                    <li>Dividend documentation</li>
                  </ul>
                </div>

                <div class="form-actions">
                  <%= form.submit "Upload Supporting Documents", class: "btn btn-secondary" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="info-section">
        <h3>How This Works</h3>
        <div class="info-steps">
          <div class="info-step">
            <span class="info-number">1</span>
            <div class="info-text">
              <strong>Organize Your Documents</strong>
              <p>Upload your blank tax forms first, then your supporting evidence documents</p>
            </div>
          </div>
          <div class="info-step">
            <span class="info-number">2</span>
            <div class="info-text">
              <strong>AI Extraction</strong>
              <p>Our AI will read through all your documents and extract relevant information</p>
            </div>
          </div>
          <div class="info-step">
            <span class="info-number">3</span>
            <div class="info-text">
              <strong>Review & Confirm</strong>
              <p>You'll review the extracted data before it's stored in your tax return</p>
            </div>
          </div>
        </div>
      </div>

      <div class="uploaded-evidence">
        <% blank_forms = @tax_return.evidences.where(evidence_type: "blank_form") %>
        <% supporting_docs = @tax_return.evidences.where(evidence_type: "supporting_document") %>

        <% if blank_forms.any? || supporting_docs.any? %>
          <h3>Uploaded Evidence</h3>

          <% if blank_forms.any? %>
            <div class="evidence-section">
              <h4>ðŸ“„ Blank Forms (<%= blank_forms.count %>)</h4>
              <div class="evidence-list">
                <% blank_forms.each do |evidence| %>
                  <div class="evidence-item">
                    <div class="evidence-filename"><%= evidence.filename %></div>
                    <div class="evidence-date"><%= evidence.created_at.strftime("%d %b %Y") %></div>
                    <div class="evidence-actions">
                      <%= link_to "View", evidence_path(evidence), class: "link-btn" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <% if supporting_docs.any? %>
            <div class="evidence-section">
              <h4>ðŸ“Ž Supporting Documents (<%= supporting_docs.count %>)</h4>
              <div class="evidence-list">
                <% supporting_docs.each do |evidence| %>
                  <div class="evidence-item">
                    <div class="evidence-filename"><%= evidence.filename %></div>
                    <div class="evidence-date"><%= evidence.created_at.strftime("%d %b %Y") %></div>
                    <div class="evidence-actions">
                      <%= link_to "View", evidence_path(evidence), class: "link-btn" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <div class="next-actions">
            <%= button_to "Run Extraction", "/tax_returns/#{@tax_return.id}/extractions/run", method: :post, class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

