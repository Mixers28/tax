<div class="container">
  <div class="export-show-page">
    <div class="header">
      <div class="back-link">
        <%= link_to "‚Üê Back to Exports", tax_return_exports_path(@tax_return) %>
      </div>
      <h1>Export #<%= @export.id %></h1>
      <p class="subtitle">For <%= @tax_return.tax_year.label %> | Generated <%= @export.exported_at.strftime("%d %B %Y at %H:%M:%S") %></p>
    </div>

    <div class="content">
      <!-- Export Summary -->
      <div class="summary-section">
        <h2>Export Summary</h2>
        <div class="summary-grid">
          <div class="summary-item">
            <label>Format</label>
            <div class="value">
              <% if @export.pdf? %>
                <span class="badge">PDF</span>
              <% end %>
              <% if @export.json? %>
                <span class="badge">JSON</span>
              <% end %>
            </div>
          </div>
          <div class="summary-item">
            <label>Export Date</label>
            <span class="value"><%= @export.exported_at.strftime("%d %b %Y %H:%M") %></span>
          </div>
          <div class="summary-item">
            <label>Status</label>
            <span class="value">
              <% if @export.file_path.present? || @export.json_path.present? %>
                <span class="status-badge success">‚úì Ready</span>
              <% else %>
                <span class="status-badge pending">‚è≥ Processing</span>
              <% end %>
            </span>
          </div>
          <% if @export.file_hash.present? %>
            <div class="summary-item">
              <label>Integrity Hash</label>
              <span class="value hash"><%= @export.file_hash %></span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Download Section -->
      <% if @export.file_path.present? || @export.json_path.present? %>
        <div class="downloads-section">
          <h2>Download Files</h2>
          <div class="download-buttons">
            <% if @export.file_path.present? %>
              <%= link_to "üì• Download PDF", download_pdf_tax_return_export_path(@tax_return, @export), class: "download-btn pdf" %>
            <% end %>
            <% if @export.json_path.present? %>
              <%= link_to "üì• Download JSON", download_json_tax_return_export_path(@tax_return, @export), class: "download-btn json" %>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Validation Summary -->
      <% if @validation_summary.present? && @validation_summary.keys.any? %>
        <div class="validation-section">
          <h2>Validation Summary</h2>
          <div class="validation-grid">
            <div class="validation-item">
              <span class="label">Total Rules</span>
              <span class="value"><%= @validation_summary[:total] || 0 %></span>
            </div>
            <div class="validation-item pass">
              <span class="label">Passed</span>
              <span class="value"><%= @validation_summary[:valid] || 0 %></span>
            </div>
            <div class="validation-item error">
              <span class="label">Errors</span>
              <span class="value"><%= @validation_summary[:errors] || 0 %></span>
            </div>
            <div class="validation-item warning">
              <span class="label">Warnings</span>
              <span class="value"><%= @validation_summary[:warnings] || 0 %></span>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Calculations Section -->
      <% if @calculations.present? && @calculations.keys.any? %>
        <div class="calculations-section">
          <h2>Tax Calculations</h2>
          <div class="calculations-grid">
            <!-- Tax Liability Calculation (Enhanced Display) -->
            <% if @calculations["tax_liability"]&.dig(:success) %>
              <% result = @calculations["tax_liability"] %>
              <div class="calculation-card tax-liability-card">
                <h3>üí∑ TAX LIABILITY</h3>

                <!-- Income Section -->
                <div class="liability-section">
                  <h4>Income</h4>
                  <div class="step">
                    <span class="label">Total Gross Income</span>
                    <span class="value">¬£<%= number_with_precision(result[:calculation_steps][0][:value].to_f, precision: 2) %></span>
                  </div>
                  <div class="step">
                    <span class="label">Taxable Income</span>
                    <span class="value">¬£<%= number_with_precision(result[:calculation_steps][1][:value].to_f, precision: 2) %></span>
                  </div>
                </div>

                <!-- Tax by Band -->
                <div class="liability-section">
                  <h4>Income Tax by Band</h4>
                  <div class="step">
                    <span class="label">Basic Rate (20%)</span>
                    <span class="value">¬£<%= number_with_precision(result[:calculation_steps][2][:value].to_f, precision: 2) %></span>
                  </div>
                  <div class="step">
                    <span class="label">Higher Rate (40%)</span>
                    <span class="value">¬£<%= number_with_precision(result[:calculation_steps][3][:value].to_f, precision: 2) %></span>
                  </div>
                  <div class="step">
                    <span class="label">Additional Rate (45%)</span>
                    <span class="value">¬£<%= number_with_precision(result[:calculation_steps][4][:value].to_f, precision: 2) %></span>
                  </div>
                  <div class="step total">
                    <span class="label">Total Income Tax</span>
                    <span class="value">¬£<%= number_with_precision(result[:calculation_steps][5][:value].to_f, precision: 2) %></span>
                  </div>
                </div>

                <!-- National Insurance -->
                <div class="liability-section">
                  <h4>National Insurance</h4>
                  <div class="step">
                    <span class="label">Class 1 NI</span>
                    <span class="value">¬£<%= number_with_precision(result[:calculation_steps][6][:value].to_f, precision: 2) %></span>
                  </div>
                  <div class="step total">
                    <span class="label">Total NI</span>
                    <span class="value">¬£<%= number_with_precision(result[:calculation_steps][7][:value].to_f, precision: 2) %></span>
                  </div>
                </div>

                <!-- Final Liability -->
                <div class="liability-section final">
                  <div class="step">
                    <span class="label">Total Tax & NI</span>
                    <span class="value">¬£<%= number_with_precision(result[:calculation_steps][8][:value].to_f, precision: 2) %></span>
                  </div>
                  <div class="step">
                    <span class="label">Tax Paid at Source</span>
                    <span class="value">-¬£<%= number_with_precision(result[:calculation_steps][9][:value].to_f, precision: 2) %></span>
                  </div>
                  <div class="calculation-result">
                    <span class="label">Net Liability</span>
                    <span class="value <%= result[:calculation_steps][10][:value].to_f > 0 ? 'owed' : 'refund' %>">
                      ¬£<%= number_with_precision(result[:calculation_steps][10][:value].to_f.abs, precision: 2) %>
                      <small>(<%= result[:calculation_steps][10][:value].to_f > 0 ? 'Amount Owed' : 'Refund Due' %>)</small>
                    </span>
                  </div>
                </div>
              </div>
            <% end %>

            <!-- Other Calculations (Generic Display) -->
            <% @calculations.each do |calc_type, result| %>
              <% next unless result[:success] %>
              <% next if calc_type == "tax_liability" %>
              <div class="calculation-card">
                <h3><%= result[:calculation_type]&.upcase || calc_type&.upcase %></h3>
                <% if result[:calculation_steps].present? %>
                  <div class="calculation-steps">
                    <% result[:calculation_steps].each do |step| %>
                      <div class="step">
                        <span class="label"><%= step[:label] %></span>
                        <span class="value">¬£<%= number_with_precision(step[:value].to_f, precision: 2) %></span>
                      </div>
                    <% end %>
                  </div>
                  <div class="calculation-result">
                    <span class="label">Result</span>
                    <span class="value">¬£<%= number_with_precision(result[:output_value].to_f, precision: 2) %></span>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Box Values Section -->
      <% if @box_values.present? && @box_values.any? %>
        <div class="box-values-section">
          <h2>Box Values</h2>
          <table class="box-values-table">
            <thead>
              <tr>
                <th>Box Code</th>
                <th>Description</th>
                <th>Value</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% @box_values.each do |bv| %>
                <tr>
                  <td><strong><%= bv.box_definition.box_code %></strong></td>
                  <td><%= bv.box_definition.hmrc_label %></td>
                  <td>
                    <% if bv.value_gbp.present? %>
                      ¬£<%= bv.value_gbp %>
                    <% elsif bv.value_raw.present? %>
                      <%= bv.value_raw %>
                    <% else %>
                      <em style="color: #999;">‚Äî</em>
                    <% end %>
                  </td>
                  <td>
                    <% if bv.value_raw.present? %>
                      <span class="status-badge success">‚úì Filled</span>
                    <% else %>
                      <span class="status-badge empty">‚úó Empty</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>

      <!-- Evidence Section -->
      <% if @evidence_links.present? && @evidence_links.any? %>
        <div class="evidence-section">
          <h2>Linked Evidence</h2>
          <div class="evidence-list">
            <% @evidence_links.each do |link| %>
              <div class="evidence-item">
                <div class="evidence-header">
                  <% if link.evidence.evidence_type == "blank_form" %>
                    <span class="evidence-icon">üìÑ</span>
                  <% else %>
                    <span class="evidence-icon">üìé</span>
                  <% end %>
                  <div class="evidence-info">
                    <h4><%= link.evidence.filename %></h4>
                    <p class="metadata">
                      Uploaded <%= link.evidence.created_at.strftime("%d %b %Y") %>
                      <% if link.referenced_in_values.present? %>
                        | Referenced in <%= link.referenced_in_values.length %> box value(s)
                      <% end %>
                    </p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Export Details -->
      <div class="details-section">
        <h2>Export Details</h2>
        <% if @export.export_snapshot.present? %>
          <details>
            <summary>Export Snapshot</summary>
            <pre><%= JSON.pretty_generate(@export.export_snapshot[0..10]) %></pre>
          </details>
        <% end %>
        <% if @export.validation_state.present? %>
          <details>
            <summary>Validation State</summary>
            <pre><%= JSON.pretty_generate(@export.validation_state) %></pre>
          </details>
        <% end %>
      </div>
    </div>
  </div>
</div>

