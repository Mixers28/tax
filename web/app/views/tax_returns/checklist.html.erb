<div class="container">
  <div class="checklist-page">
    <div class="header">
      <div class="back-link">
        <%= link_to "â† Back to Tax Return", tax_return_path(@tax_return) %>
      </div>
      <div class="header-actions">
        <button type="button" class="theme-toggle" data-theme-toggle>Theme: Auto</button>
      </div>
      <h1>Missing Items Checklist</h1>
      <p class="subtitle">Review required fields before export</p>
    </div>

    <% if @template_profile.nil? %>
      <div class="alert-banner">
        <p>No template profile exists yet. Create one to generate a checklist.</p>
        <%= link_to "Create Template Profile", new_template_profile_path, class: "btn btn-primary" %>
      </div>
    <% elsif @checklist[:items].empty? %>
      <div class="empty-state">
        <p>No checklist items found. Add fields to the template profile.</p>
        <%= link_to "Manage Template Profile", template_profile_path, class: "btn btn-primary" %>
      </div>
    <% else %>
      <div class="summary-cards">
        <div class="summary-card">
          <label>Total Fields</label>
          <p><%= @checklist[:summary].total %></p>
        </div>
        <div class="summary-card">
          <label>Required Fields</label>
          <p><%= @checklist[:summary].required %></p>
        </div>
        <div class="summary-card warning">
          <label>Missing Values</label>
          <p><%= @checklist[:summary].missing_value %></p>
        </div>
        <div class="summary-card warning">
          <label>Missing Confirmation</label>
          <p><%= @checklist[:summary].missing_confirmation %></p>
        </div>
        <div class="summary-card warning">
          <label>Missing Evidence</label>
          <p><%= @checklist[:summary].missing_evidence %></p>
        </div>
      </div>

      <div class="section">
        <h2>Checklist Details</h2>
        <table class="checklist-table">
          <thead>
            <tr>
              <th>Box</th>
              <th>Field</th>
              <th>Required</th>
              <th>Value</th>
              <th>Confirmation</th>
              <th>Evidence</th>
            </tr>
          </thead>
          <tbody>
            <% @checklist[:items].each do |item| %>
              <% field = item.template_field %>
              <% box = field.box_definition %>
              <tr>
                <td>
                  <% if box %>
                    <strong><%= box.box_code %></strong>
                  <% else %>
                    <span class="muted">Custom</span>
                  <% end %>
                </td>
                <td>
                  <div class="field-name">
                    <strong><%= field.label.presence || box&.hmrc_label || "Custom field" %></strong>
                    <% if box&.hmrc_label.present? && field.label.present? %>
                      <span class="muted"><%= box.hmrc_label %></span>
                    <% end %>
                  </div>
                </td>
                <td><%= field.required? ? "Yes" : "No" %></td>
                <td class="<%= item.missing_value ? "status-missing" : "status-ok" %>">
                  <%= item.missing_value ? "Missing" : "OK" %>
                </td>
                <td class="<%= item.missing_confirmation ? "status-missing" : "status-ok" %>">
                  <%= item.missing_confirmation ? "Missing" : "OK" %>
                </td>
                <td class="<%= item.evidence_status == :missing ? "status-missing" : item.evidence_status == :unknown ? "status-muted" : "status-ok" %>">
                  <% if item.evidence_status == :unknown %>
                    <span class="muted">Not tracked</span>
                  <% else %>
                    <%= item.evidence_status == :missing ? "Missing" : "Present" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>

<style>
  :root {
    color-scheme: light dark;
    --paper: #f7f4ee;
    --paper-alt: #fbfaf6;
    --card: #ffffff;
    --ink: #1f2937;
    --muted: #6b7280;
    --accent: #0f4c5c;
    --accent-strong: #0b3742;
    --border: #e2e8f0;
  }

  .container {
    background-color: var(--paper);
    background-image:
      linear-gradient(90deg, rgba(15, 76, 92, 0.05) 0, rgba(15, 76, 92, 0.05) 1px, transparent 1px),
      repeating-linear-gradient(0deg, transparent 0, transparent 31px, rgba(15, 76, 92, 0.04) 31px, rgba(15, 76, 92, 0.04) 32px);
    background-size: 96px 100%, 100% 32px;
    min-height: 100vh;
    padding: 1rem;
    color: var(--ink);
    font-family: "IBM Plex Sans", "Segoe UI", Arial, sans-serif;
  }

  .checklist-page {
    max-width: 1200px;
    margin: 0 auto;
  }

  .header {
    background: linear-gradient(135deg, #0f172a 0%, #0b1f2a 100%);
    color: #f8fafc;
    padding: 2rem;
    border-radius: 8px;
    margin-bottom: 1.5rem;
    box-shadow: 0 10px 24px rgba(15, 23, 42, 0.18);
    position: relative;
  }

  .header-actions {
    position: absolute;
    top: 1.25rem;
    right: 1.25rem;
  }

  .theme-toggle {
    border: 1px solid rgba(248, 250, 252, 0.35);
    background: rgba(248, 250, 252, 0.12);
    color: #f8fafc;
    padding: 0.35rem 0.75rem;
    border-radius: 999px;
    font-size: 0.75rem;
    cursor: pointer;
  }
  .back-link a {
    color: white;
    text-decoration: none;
  }

  .subtitle {
    opacity: 0.9;
    margin-top: 0.5rem;
  }

  .summary-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .summary-card {
    background: var(--card);
    border-radius: 8px;
    padding: 1rem;
    border: 1px solid var(--border);
  }

  .summary-card.warning {
    border-left: 4px solid #f59e0b;
  }

  .summary-card label {
    color: #6b7280;
    font-size: 0.85rem;
  }

  .summary-card p {
    font-size: 1.5rem;
    margin-top: 0.4rem;
  }

  .section {
    background: var(--card);
    border-radius: 8px;
    padding: 1.5rem;
    border: 1px solid var(--border);
  }

  .checklist-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 1rem;
  }

  .checklist-table th,
  .checklist-table td {
    text-align: left;
    padding: 0.75rem;
    border-bottom: 1px solid var(--border);
  }

  .field-name {
    display: flex;
    flex-direction: column;
  }

  .muted {
    color: var(--muted);
    font-size: 0.85rem;
  }

  .status-missing {
    color: #b91c1c;
    font-weight: 600;
  }

  .status-ok {
    color: #15803d;
    font-weight: 600;
  }

  .status-muted {
    color: var(--muted);
    font-weight: 600;
  }

  .alert-banner,
  .empty-state {
    background: var(--card);
    border-radius: 8px;
    padding: 1.5rem;
    border: 1px solid var(--border);
  }

  .alert-banner {
    border-left: 4px solid #dc2626;
    margin-bottom: 1rem;
  }

  .btn {
    padding: 0.6rem 1.25rem;
    border-radius: 6px;
    border: none;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
  }

  .btn-primary {
    background: var(--accent);
    color: white;
  }

  .btn-primary:hover {
    background: var(--accent-strong);
  }

  @media (max-width: 768px) {
    .header {
      padding: 1.5rem;
    }
    .checklist-table th,
    .checklist-table td {
      padding: 0.5rem;
    }
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --paper: #0b1116;
      --paper-alt: #0f172a;
      --card: #0f172a;
      --ink: #e5e7eb;
      --muted: #9ca3af;
      --accent: #2dd4bf;
      --accent-strong: #14b8a6;
      --border: #1f2937;
    }

    .header {
      background: linear-gradient(135deg, #0b141b 0%, #0b1f2a 100%);
      box-shadow: 0 12px 28px rgba(0, 0, 0, 0.45);
    }
  }

  html[data-theme="dark"] {
    --paper: #0b1116;
    --paper-alt: #0f172a;
    --card: #0f172a;
    --ink: #e5e7eb;
    --muted: #9ca3af;
    --accent: #2dd4bf;
    --accent-strong: #14b8a6;
    --border: #1f2937;
  }

  html[data-theme="dark"] .header {
    background: linear-gradient(135deg, #0b141b 0%, #0b1f2a 100%);
    box-shadow: 0 12px 28px rgba(0, 0, 0, 0.45);
  }

  html[data-theme="light"] {
    --paper: #f7f4ee;
    --paper-alt: #fbfaf6;
    --card: #ffffff;
    --ink: #1f2937;
    --muted: #6b7280;
    --accent: #0f4c5c;
    --accent-strong: #0b3742;
    --border: #e2e8f0;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const themeButtons = Array.from(document.querySelectorAll("[data-theme-toggle]"));
    const themeKey = "theme";
    const themeOrder = ["auto", "dark", "light"];

    const normalizeTheme = (value) => (themeOrder.includes(value) ? value : "auto");
    const applyTheme = (value) => {
      const theme = normalizeTheme(value);
      if (theme === "auto") {
        document.documentElement.removeAttribute("data-theme");
      } else {
        document.documentElement.setAttribute("data-theme", theme);
      }
      themeButtons.forEach((button) => {
        button.textContent = `Theme: ${theme.charAt(0).toUpperCase()}${theme.slice(1)}`;
      });
    };

    applyTheme(localStorage.getItem(themeKey));

    themeButtons.forEach((button) => {
      button.addEventListener("click", () => {
        const current = normalizeTheme(localStorage.getItem(themeKey));
        const next = themeOrder[(themeOrder.indexOf(current) + 1) % themeOrder.length];
        localStorage.setItem(themeKey, next);
        applyTheme(next);
      });
    });
  });
</script>
