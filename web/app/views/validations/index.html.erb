<div class="container">
  <div class="validations-page">
    <div class="header">
      <div class="back-link">
        <%= link_to "← Back to Tax Return", tax_return_path(@tax_return) %>
      </div>
      <h1>Validations</h1>
      <p class="subtitle">Verify your tax return data for <%= @tax_return.tax_year.label %></p>
    </div>

    <div class="content">
      <div class="actions">
        <%= button_to "Run Validations", "/tax_returns/#{@tax_return.id}/validations/run_validation", method: :post, class: "btn btn-primary btn-lg" %>
      </div>

      <% if @validation_results.present? %>
        <div class="validation-results">
          <div class="summary">
            <h2>Validation Summary</h2>
            <div class="summary-stats">
              <div class="stat">
                <span class="stat-value"><%= @validation_results[:total] %></span>
                <span class="stat-label">Total Rules</span>
              </div>
              <div class="stat passed">
                <span class="stat-value"><%= @validation_results[:passed] %></span>
                <span class="stat-label">Passed</span>
              </div>
              <div class="stat failed">
                <span class="stat-value"><%= @validation_results[:failed] %></span>
                <span class="stat-label">Failed</span>
              </div>
              <div class="stat warnings">
                <span class="stat-value"><%= @validation_results[:warnings].length %></span>
                <span class="stat-label">Warnings</span>
              </div>
            </div>
          </div>

          <% if @validation_results[:errors].present? %>
            <div class="validation-section errors">
              <h3>Errors (Must Fix)</h3>
              <div class="validation-list">
                <% @validation_results[:errors].each do |error| %>
                  <div class="validation-item error">
                    <div class="item-header">
                      <span class="badge error">ERROR</span>
                      <strong><%= error[:rule_code] %></strong>
                    </div>
                    <p class="item-message"><%= error[:message] %></p>
                    <% if error[:affected_boxes].present? %>
                      <p class="item-boxes">Affected boxes: <code><%= error[:affected_boxes].join(", ") %></code></p>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <% if @validation_results[:warnings].present? %>
            <div class="validation-section warnings">
              <h3>Warnings (Review)</h3>
              <div class="validation-list">
                <% @validation_results[:warnings].each do |warning| %>
                  <div class="validation-item warning">
                    <div class="item-header">
                      <span class="badge warning">WARNING</span>
                      <strong><%= warning[:rule_code] %></strong>
                    </div>
                    <p class="item-message"><%= warning[:message] %></p>
                    <% if warning[:affected_boxes].present? %>
                      <p class="item-boxes">Affected boxes: <code><%= warning[:affected_boxes].join(", ") %></code></p>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <% if @validation_results[:info].present? %>
            <div class="validation-section info">
              <h3>Information</h3>
              <div class="validation-list">
                <% @validation_results[:info].each do |info| %>
                  <div class="validation-item info">
                    <div class="item-header">
                      <span class="badge info">INFO</span>
                      <strong><%= info[:rule_code] %></strong>
                    </div>
                    <p class="item-message"><%= info[:message] %></p>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <% if @validation_results[:passed].present? && @validation_results[:passed] > 0 %>
            <div class="validation-section passed">
              <h3>✓ Passed Checks</h3>
              <p><%= @validation_results[:passed] %> validation rules passed successfully.</p>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="empty-state">
          <p>No validations run yet. Click "Run Validations" to check your tax return data.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
